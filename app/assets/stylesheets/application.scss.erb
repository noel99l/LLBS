@import "bootstrap-sprockets";
@import "bootstrap";
@import 'bootstrap-datetimepicker';
@import url(//fonts.googleapis.com/earlyaccess/notosansjapanese.css);
@import "trix";
.wf-notosansjapanese {
font-family: 'Noto Sans Japanese', serif;
}

.wrapper{
    min-height: 100vh;
    position: relative;
    padding-bottom: 100px;
    box-sizing: border-box;
}

header {
  width: 100%;
  padding: 15px 0;
  margin: 0 auto;
  text-align: center;
}

.navbar-left {
  padding-top: 10px;
}

footer {
  width: 100%;
  height: 50px;
  margin: 0;
  text-align: center;
  background-color: #777777;
  position: absolute;
  bottom: 0;
}

.footer-text {
  padding: 10px;
  color: #fff;
}

.event-header {
  border-radius: 20px;
  background-color: skyblue;
  padding: 3px 15px;
  border: 3px solid #53b9ff;
}

.event-container {
  margin: 10px 10px 20px;
}

.member_list{
  width:100%;
  padding:5px;
  margin-top:5px;
  min-height:52px;
}

ul,ol,li {
  margin: 0;
  padding: 0;
  list-style-type: none;
}

.round_border{
  border: 1px solid #cdcddd;
  border-radius: 5px;
  background:#fcfeff;
}

.member_list ul{
  margin:3px 0 0 0;
}

.member_list li{
  margin:0;
  padding:2px 0 2px 0;
  border-top: 1px solid #eee;
  border-bottom:none;
}

.drop_shadow {
box-shadow: 0px 0px 10px 0px gray;
}

.min-height{
min-height: 600px;
}

#map{
  width: 100%;
  height: 500px;
}

#map2{
  width: 100%;
  height: 300px;
}

.icon-custom {
 font-size: 25px;
 text-align: center;
 position: absolute;
 top: 10px;
 left: 0;
 right: 0;
 margin: auto;
 }

 .event_container{
 width: 100%;
 height: 330px;
 margin: 10px 0px;
 padding: 10px;
 }

 .skippr-container{
    width:100%;
    height: 500px;
}

.image_action:hover {
 opacity: 0.5;
 }

.progress {
  margin: 5px 0;
}

.voice {
    margin-bottom: 10px;
}

.voice-img-right {
    margin-left: 4px;
    margin-top: -1px;
    float: left;
    width: 70px;
    height: 70px;
}

.voice-text-left:before {
    position: absolute;
    content: '';
    border: 10px solid transparent;
    border-left: 10px solid #eee;
    top: 21px;
    right: -23px;
}

.voice-text-left {
    position: relative;
    margin-left: 100px;
    margin-right: 100px;
    padding: 1.2em;
    border: 3px solid #eee;
    background-color: #fff;
    border-radius: 5px;
}

.voice-text-left:after {
    position: absolute;
    content: '';
    border: 10px solid transparent;
    border-left: 10px solid #fff;
    top: 21px;
    right: -19px;
    box-sizing: border-box;
}

.voice-img-left {
    margin-left: 4px;
    margin-top: -1px;
    float: right;
    width: 70px;
    height: 70px;
}

.voice-text-right:before {
    position: absolute;
    content: '';
    border: 10px solid transparent;
    border-right: 10px solid #eee;
    top: 21px;
    left: -23px;
}

.voice-text-right {
    color: #444;
    position: relative;
    margin-left: 100px;
    margin-right: 100px;
    padding: 1.2em;
    border: 3px solid #eee;
    background-color: #fff;
    border-radius: 5px;
}

.voice-text-right:after {
    position: absolute;
    content: '';
    border: 10px solid transparent;
    border-right: 10px solid #fff;
    top: 21px;
    left: -19px;
    box-sizing: border-box;
}

.voice-img-description {
    font-size: 5px;
    margin-right: 4px;
    margin-top: -1px;
    font-weight: bold;
    text-align: center;
}

.comment-datetime-left{
  color: gray;
  position: relative;
  margin-right: 27px;
  float: right;
}

.comment-datetime-right{
  color: gray;
  position: relative;
  margin-right: 100px;
  float: right;
}

.btn {
    margin-right: 4px;
    margin-bottom: 4px;
    font-size: 16px;
    font-weight: 400;
    border-radius: 30px;
}


